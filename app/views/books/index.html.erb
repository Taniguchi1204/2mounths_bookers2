<div class='container px-5 px-sm-0'>
  <div class='row'>
    <div class='col-md-3'>
      <h2>User info</h2>
      <%= render 'users/info', user: current_user %>
      <h2 class="mt-3">New book</h2>
      <%= render 'layouts/errors', obj: @book %>
      <%= render 'form', book: @book %>
    </div>
    <div class='col-md-8 offset-md-1'>
      <h2>Books</h2>
      <%= render 'index', books: @books%>
      <table class="table">
        <tr>
          <td>７日前</td>
          <td>６日前</td>
          <td>５日前</td>
          <td>４日前</td>
          <td>３日前</td>
          <td>２日前</td>
          <td>前日</td>
          <td>今日</td>
        </tr>
        <tr>
          <td><%= @books_7day %></td>
          <td><%= @books_6day %></td>
          <td><%= @books_5day %></td>
          <td><%= @books_4day %></td>
          <td><%= @books_3day %></td>
          <td><%= @books_2day %></td>
          <td><%= @yesterday_books %></td>
          <td><%= @today %></td>
        </tr>
      </table>
      <canvas id="myChart" width="400" height="400"></canvas>
<script>
var ctx = document.getElementById('myChart').getContext('2d');
var myChart = new Chart(ctx, {
    type: 'line',
    data: {
        labels: ['7日前', '6日前', '5日前', '4日前', '3日前', '2日前', '昨日','今日'],
        datasets: [{
            label: '投稿数',
            data: [<%= @books_7day %>, <%= @books_6day %>, <%= @books_5day %>, <%= @books_4day %>, <%= @books_3day %>, <%= @books_2day %>, <%= @yesterday_books %>, <%= @today %>],
            backgroundColor: [
                'rgba(255, 99, 132, 0.2)',
                'rgba(54, 162, 235, 0.2)',
                'rgba(255, 206, 86, 0.2)',
                'rgba(75, 192, 192, 0.2)',
                'rgba(153, 102, 255, 0.2)',
                'rgba(255, 159, 64, 0.2)'
            ],
            borderColor: [
                'rgba(255, 99, 132, 1)',
                'rgba(54, 162, 235, 1)',
                'rgba(255, 206, 86, 1)',
                'rgba(75, 192, 192, 1)',
                'rgba(153, 102, 255, 1)',
                'rgba(255, 159, 64, 1)'
            ],
            borderWidth: 1
        }]
    },
    options: {
        scales: {
            y: {
                beginAtZero: true
            }
        }
    }
});
</script>
    </div>
  </div>
</div>