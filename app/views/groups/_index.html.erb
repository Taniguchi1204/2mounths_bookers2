<table class='table'>
  <thead>
    <tr>
      <th>image</th>
      <th>name</th>
      <td>introduction</td>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% groups.each do |group| %>
      <tr>
        <td><%= attachment_image_tag(group, :image, :fill, 50, 50, fallback: "no-image-icon.jpg") %></td>
        <td><%= group.name %></td>
        <td><%= group.introduction %></td>
        <td><%= link_to 'Show', group_path(group) %></td>
        <% if group != current_user %>
        <td>
          <%= link_to "Edit", edit_group_path(group) %>
        </td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>
